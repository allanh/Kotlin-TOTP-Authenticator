<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@android:color/background_light"
                                                   android:layout_marginBottom="0dp"
                                                   android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                                                   android:layout_marginTop="10dp"
                                                   android:id="@+id/config_layout">

    <TextView
            android:id="@+id/tv_config_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="18sp" android:paddingLeft="20dp" android:paddingStart="20dp"
            android:paddingBottom="0dp"
            android:paddingRight="0dp" android:paddingTop="0dp" android:paddingEnd="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"/>
    <TextView
            android:id="@+id/tv_config_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp" android:paddingLeft="0dp" android:paddingStart="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="10dp" android:paddingTop="0dp" android:paddingEnd="0dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_config_name"
            android:gravity="center_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>