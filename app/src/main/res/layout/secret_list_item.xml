<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
            android:id="@+id/tv_secret_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" android:paddingLeft="20dp" android:paddingBottom="10dp"
            android:paddingRight="0dp" android:paddingTop="0dp" android:paddingStart="20dp" android:paddingEnd="0dp"/>
    <TextView
            android:id="@+id/tv_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" android:paddingLeft="20dp" android:paddingStart="20dp" android:paddingBottom="0dp"
            android:paddingRight="0dp" android:paddingTop="0dp" android:paddingEnd="0dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/progressBar" android:layout_weight="1" tools:visibility="visible" android:max="100"
            android:progress="50"/>
</LinearLayout>
