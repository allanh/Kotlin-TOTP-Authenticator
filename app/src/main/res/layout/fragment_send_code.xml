<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="com.udnshopping.udnsauthorizer.view.sendcode.SendCodeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".view.MainActivity" >

        <TextView
                android:id="@+id/tv_send_qrcode_title"
                android:text="@string/send_qrcode_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="30sp" android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
        />
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_send_qrcode_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/et_email" android:hint="@string/email_hint" android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/tv_send_qrcode_content"
                android:text="@string/send_qrcode_context"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp" android:textColor="@android:color/darker_gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>